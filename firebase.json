{
  "hosting": {
    "public": ".",
    "predeploy": ["node scripts/generate-imgs.js"],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/.git/**",
      "firebase-debug.log",
      "firebase-debug.*.log",
      "apphosting.yaml"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
